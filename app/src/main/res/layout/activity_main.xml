<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgbacground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textmaintitle"
        android:layout_marginTop="50dp"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Fight Battle"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@drawable/bgquestion"
        android:layout_width="270dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textquestion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Guess Animal in English Language"
            android:textSize="23sp"
            android:lineSpacingExtra="5dp"
            android:textColor="#332FA2"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    
    <EditText
        android:id="@+id/textedit"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/bgpurple"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:textColor="#332FA2"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textsubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ammo"
        android:textColor="#fff"
        android:textSize="28sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="34dp"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>